alias ls='ls --color=auto'

#alias dir='dir --color=auto'
#alias vdir='vdir --color=auto'

#alias grep='grep --color=auto'
#alias fgrep='fgrep --color=auto'
#alias egrep='egrep --color=auto'
alias ack=ack-grep

# some more ls aliases
alias ll='ls -l'
#alias la='ls -A'
#alias l='ls -CF'

alias ..='cd ..'
alias cd..='cd ..'
alias ...='cd ../..'

alias vi=vim

# do not output the commands being executed
alias make='make -s'

# filter out *.pyc files in the output of the tree command
alias tree='tree -I \*.pyc'

# call it if the annoying error message "Unable to update lunar concurrently
# while installing." on Lunar Linux appears!
alias kill_lunar_cache='killall -9 lin; killall -9 lget; killall -9 lunar; killall -9 wget'

alias ssh-uni='ssh -i .ssh/id_uni sliedtke@informatik.uni-bremen.de'
