alias ..='cd ..'
alias cd..='cd ..'
alias ...='cd ../..'

alias vi=vim

alias bpython2.7='PYTHONPATH=~/repos/cloneonly/bpython python2.7 -m bpython.cli'
alias bpython2.6='PYTHONPATH=~/repos/cloneonly/bpython python2.6 -m bpython.cli'
alias bpython3.1='PYTHONPATH=~/repos/cloneonly/bpython python3.1 -m bpython.cli'
