alias go-repl='rlwrap repl'

alias get_wtfpl='wget http://sam.zoy.org/wtfpl/COPYING'
alias get_distribute_setup.py='wget http://python-distribute.org/distribute_setup.py'

alias sync_music='unison Music/songbird/ /Volumes/Daten/Musik -auto -perms 0 -ignore "Name .DS_Store"'

alias init_project='touch README setup.py MANIFEST.in tox.ini && mkdir test && get_wtfpl'

# do not output the commands being executed
alias make='make -s'

# filter out *.pyc files in the output of the tree command
alias tree='tree -I \*.pyc'

# a shortcut to create an executable binary out of a single *.go file
function rungo() {
	6g -o a.6 $1 && 6l -o a.out a.6 && ./a.out && rm a.6 a.out
}
